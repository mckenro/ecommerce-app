{% include 'header.html.twig' %}

<div class="checkout">
  <div class="container">
    <h1 id="cartTitle">Shopping Cart</h1>
  <!--user conformation displays here-->
  <div class="userConformation">
    <h3>Payment Information:</h3>
    <ul id="payInfo"></ul>
    <h3>Shipping Info:</h3>
    <ul id="shipInfo"></ul>
    <button class="btn btn-default" id="thanks" type="submit">Finish order</button>
  </div>
  <div class="thankYou">
    <h1>Thank you for shopping with Tee Shirts and Stuff!</h1>
    <h3>Your awesome new products will arrive in 3-5 business days</h3>
  </div>
    <!--emailDiscount-->
  <div class="row">
    <div class="col-md-4">
      <form id="emailDiscount">
        <h3>Sign up for our mailing list and receive 20% off your first order!</h3>
        <div class="form-group">
          <label for="email"></label>
          <input id="email" class="form-control" type="email" placeholder="Email" required>
        </div>
        <button class= "btn btn-default" type="submit">Add E-mail</button>
        <button class="btn btn-success" id="purchase" type=submit>No Thanks</button>
      </form>

    </div>
    <div class="col-md-8">
        <h2 class="itemsInCart">Items Currently in Your Cart</h2>
        <div class="emptyCart">
          <h3>Your cart is currently empty</h3>
        </div>
        <ul class="cartItems"><ul>
    </div>
  </div><!-- end row -->
  </div><!-- end container -->

  <!--Takes user info and payment-->
  <form id="userInput">
    <div class="hideUserInput">
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <h3>Billing Address</h3>
          </div>
          <div class="col-sm-5">
            <div id="billingInfo">
              <div class="form-group">
                <label for="name"></label>
                <input id="name" class="form-control" type="text" placeholder="Name on Card" required>
              </div>
              <div class="form-group">
                <label for="address"></label>
                <input id="address" class="form-control" type="text" placeholder="Address" required>
              </div>
              <div class="form-group">
                <label for="city"></label>
                <input id="city" class="form-control" type="text" placeholder="City" required>
              </div>
              <div class="form-group">
                <label for="state"></label>
                <input id="state" class="form-control" type="text" placeholder="State" required>
              </div>
              <div class="form-group">
                <label for="zip"></label>
                <input id="zip" class="form-control" type="text" placeholder="Zip Code" required>
              </div>
              <div class="form-group">
                <label for="phone"></label>
                <input id="phone" class="form-control" type="text" placeholder="Phone Number" required>
              </div>
              </div><!-- end #billingInfo -->
            </div>
            <!--displays price-->
            <div class="col-md-3">
              <table class="table">
                <div id="priceCalculator">
                  <div class="table-header">
                    <h2>Order Summary</h2>
                  </div>
                  <div class="priceSheet">
                    <p id="itemTotal">Items Total: $</p>
                    <p id="shippingTotal">Shipping: $</p>
                    <p id="tax">Tax: $</p>
                    <p id="grandTotal"></p>
                    <p id="discountTotal"></p>
                  </div>
                </div>
              </table>
            </div>
          </div>
        </div><!-- end container -->
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h3>Shipping Address</h3>
        </div>
        <div class="col-md-5">
          <div id="addressInfo">
              <div class="form-group">
                <label for="shipAddress"></label>
                <input id="shipAddress" class="form-control" type="text" placeholder="Address" required>
              </div>
              <div class="form-group">
                <label for="shipCity"></label>
                <input id="shipCity" class="form-control" type="text" placeholder="City" required>
              </div>
              <div class="form-group">
                <label for="shipState"></label>
                <input id="shipState" class="form-control" type="text" placeholder="State" required>
              </div>
              <div class="form-group">
                <label for="shipZip"></label>
                <input id="shipZip" class="form-control" type="text" placeholder="Zip Code" required>
              </div>
            </div>
          </div>
        </div><!-- end row -->
      </div><!-- end container -->
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <h3>Payment Information</h3>
            </div>
            <div class="col-md-5">
              <div id="creditCardInfo">
                <div class="form-group">
                  <label for="cardNumber"></label>
                  <input id="cardNumber" class="form-control" type="text" placeholder="Credit Card Number" required>
                </div>
                <div class="form-group">
                  <label for="expire"></label>
                  <input id="expire" class="form-control" type="text" placeholder="Expiration Date" required>
                </div>
                <div class="form-group">
                  <label for="cvc"></label>
                  <input id="cvc" class="form-control" type="text" placeholder="CVC" required>
                </div>
                  <button class="btn btn-success" type="submit">Confirm Purchase</button>
              </div><!-- end #creditCardInfo -->
            </div>
          </form>
          </div>
      </div><!-- end container -->
    </div><!-- end #hideUserInput -->
</div>

<!-- add footer with twig below here -->
</body>
</html>
